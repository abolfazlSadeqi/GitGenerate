@using Service.Services
@model GitConcept
@using System.Globalization

@{
    var currentLang = CultureInfo.CurrentCulture.TwoLetterISOLanguageName == "fa" ? Language.Fa : Language.En;
}

<div class="container my-5">

    <div class="card shadow-lg border-0 rounded-4 p-4 detail-card">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="fw-bold text-primary m-0">
                @Html.Raw(Model.Title.ContainsKey(currentLang) ? Model.Title[currentLang] : Model.Title[Language.En])
            </h2>
        </div>

        <div class="detail-text fs-5 mt-3">
            @Html.Raw(Model.Description.ContainsKey(currentLang) ? Model.Description[currentLang] : Model.Description[Language.En])
        </div>

        <div class="mt-4">
            <a href="javascript:history.back()" class="btn btn-outline-primary px-4 py-2 rounded-pill fw-semibold">
                ← Back
            </a>
        </div>

    </div>

</div>

<style>
    .detail-card {
        background: #ffffff;
        border-left: 5px solid #0d6efd;
    }

    .detail-text ul {
        margin-top: 15px;
    }

    .detail-text li {
        margin-bottom: 6px;
        line-height: 1.8;
    }

    .detail-text div {
        margin-bottom: 10px;
    }
</style>
